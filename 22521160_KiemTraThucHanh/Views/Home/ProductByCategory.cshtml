@{
    ViewData["Title"] = "ProductByCategory";
    Layout = "~/Views/Shared/_LayoutOgani.cshtml";
}

@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Product>
@foreach (var item in Model)
{
    @await Html.PartialAsync("PartialProduct", item)
}
<div class="product__pagination">
    @Html.PagedListPager(Model, page => Url.Action("ProductByCategory", new { page = page, maloai = ViewBag.maloai }))
</div>
